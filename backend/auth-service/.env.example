# Environment (development, test, production)
NODE_ENV=development

# Server Configuration
AUTH_PORT=3001
AUTH_HOST=0.0.0.0
NETWORK_IP=192.168.1.23

# Production Configuration
PRODUCTION_AUTH_PORT=80
PRODUCTION_AUTH_HOST=0.0.0.0
PRODUCTION_URL=https://auth.univance.com

# Database - Development
MONGO_URI=mongodb://localhost:27017/univance

# Database - Production
PRODUCTION_MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/univance?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_development_jwt_secret_key
JWT_REFRESH_SECRET=your_development_refresh_secret_key
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# Production JWT Configuration
PRODUCTION_JWT_SECRET=your_production_jwt_secret_key
PRODUCTION_JWT_REFRESH_SECRET=your_production_refresh_secret_key

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=password

# Render.com Deployment
RENDER_EXTERNAL_URL=https://univance-auth.onrender.com